
<div class="jumbotron jumbotron-fluid" id="humbo">
  <div class="container">
    <h1 class="display-4">Burgers!</h1>
    <p class="lead">Pick any Burger and Eat it! .</p>
  </div>
</div>


<h2>Burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are GONE!!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add burger</button>
</form>